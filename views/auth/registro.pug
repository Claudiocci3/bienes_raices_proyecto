extends ../layout/index
block contenido 
   div.py-10
   h1.text-4x1.my-10.font-extrabold.text-center Bienes
      span.font-normal Raices
   h2.text-center.text-2xl.font-extrabold= pagina
   
   if errores
      div(class="max-w-md mx-auto my-10")
         each error in errores
            p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.error
   
   if mensaje
      div(class="max-w-md mx-auto my-10")
         p.bg-green-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= mensaje

   


   .mt8.mx.mx-auto.max-w-md
      .bg-white.py-4.shadow
            form.space-y-5(method="POST" action="/auth/registro")
               div 
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre
                  input#nombre.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre")
               div 
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                  input#email.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Tu email" type="email" name="email")
               div 
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                  input#password.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Tu password" type="password" name="password")
               div 
                  label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Repetir password
                  input#repetir_password.w-full.px-3.py-2.border.border-gray-300.placeholder-gray-400(placeholder="Repite tu password" type="password" name="repetir_password")

               div.flex.items-center.justify-between
                  a.text-gray.text-xs(href="/auth/login") Ya tienes cuenta ? Inicia sesion 
                  a.text-gray.text-xs(href="/auth/olvide-password") Olvide mi password 

               input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")
               
